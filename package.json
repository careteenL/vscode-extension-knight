{
	"name": "knight",
	"displayName": "@careteen/Knight",
	"description": "Reading",
	"version": "0.4.0",
	"publisher": "careteen",
	"repository": {
		"type": "git",
		"url": "https://github.com/careteenL/vscode-extension-knight.git"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:novel-list"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Knight.openSelectedNovel",
				"title": "打开该小说"
			},
			{
				"command": "Knight.openOnlineNovel",
				"title": "打开该网络小说"
			},
			{
				"command": "Knight.searchOnlineNovel",
				"title": "搜索网络小说"
			},
			{
				"command": "Knight.addFavorite",
				"title": "添加收藏"
			}
		],
		"menus": {
			"editor/context": [],
			"view/title": [
				{
					"command": "Knight.searchOnlineNovel",
					"when": "view == novel-list",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "Knight.addFavorite",
					"when": "view == novel-list && viewItem == online",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "novel-read",
					"icon": "images/logo.svg",
					"title": "NOVEL READ"
				}
			]
		},
		"views": {
			"novel-read": [
				{
					"id": "novel-list",
					"name": "本地列表栏"
				},
				{
					"id": "favorite-novel",
					"name": "收藏的网络小说"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "小说插件配置",
			"properties": {
				"novel.favorites": {
					"type": "array",
					"default": [],
					"scope": "window",
					"description": "小说收藏单"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.22",
		"cheerio": "^1.0.0-rc.3",
		"https": "^1.0.0"
	}
}
